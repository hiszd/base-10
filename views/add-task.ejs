<% include partials/header.ejs %>
<div id="cont" class="container cont">
	<% if (message != '') { %>
		<p class="text-center text-danger"><%= message %></p>
		<% } %>
		<form class="add-part-form" action="" method="post">
			<div class="form-row">
				<div class="form-group col-md-4">
					<input type="text" class="form-control" name="bucket" id="bucket" placeholder="Bucket" required>
				</div>
				<div class="form-group col-md-4">
					<input type="text" class="form-control" name="task" id="task" placeholder="Task" required>
				</div>
				<div class="form-group col-md-4">
					<input type="number" class="form-control" name="time" id="time" placeholder="1" required>
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-md-6">
					<input type="text" class="form-control" name="description" id="description" placeholder="Description" required>
				</div>
				<div class="form-group col-md-6">
					<select id="status" name="status" class="form-control" required>
						<option selected disabled>Choose status</option>
						<option>Open</option>
						<option>Closed</option>
					</select>
				</div>
				<div class="form-group col-md-6">
					<input type="textarea" class="form-control" name="notes" id="notes" placeholder="Notes" required>
				</div>
			</div>
			<button type="submit" class="btn btn-primary float-right">Add Task</button>
		</form>
	</div>
</div>
<script type='application/x-javascript' src='js/add-html.js'></script>
</body>
</html>
