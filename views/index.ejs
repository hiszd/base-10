<% include partials/header.ejs %>
<div class="index-wrapper container-fluid">
  <div class="row justify-content-start">
    <% if (tasks) {%>
    <% if (tasks.length > 0) {%>
    <% tasks.forEach((task, index) => { %>
    <div class="card w-25 m-2">
      <div class="card-header"><%= task.bucket %></div>
      <div class="card-body">
	<h5 class="card-title"><%= task.task %></h5>
	<ul class="list-group list-group-flush mb-3">
	  <li class="list-group-item">Status: <%= task.status %></li>
	  <li class="list-group-item">Time Req: <%= task.time %></li>
	  <li class="list-group-item">Notes: <%= task.notes %></li>
	  <li class="list-group-item">Desc: <%= task.description %></li>
	</ul>
	<a href="/edit/<%= task.id %>" rel="noopener" class="btn btn-sm btn-success">Edit</a>
	<a href="/delete/<%= task.id %>" class="btn btn-sm btn-danger">Delete</a>
      </div>
    </div>
    <% }) %>
    <% } else { %>
    <p class="text-center">No tasks found. Go <a href="/add" >here</a> to add tasks.</p>
    <% } %>
    <% } %>
  </div>
</div>
</div>
</body>
</html>
