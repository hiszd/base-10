<% include partials/header.ejs %>
	<div class="table-wrapper">
		<% if (tasks) {%>
			<% if (tasks.length > 0) {%>
				<table class="table table-hovered">
					<thead class="thead-dark">
						<tr>
							<th scope="col">Bucket</th>
							<th scope="col">Task</th>
							<th scope="col">Status</th>
							<th scope="col">Time</th>
							<th scope="col">Notes</th>
							<th scope="col">Description</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
					<% tasks.forEach((task, index) => { %>
						<tr>
							<th scope="row"><%= task.bucket %></th>
							<td><%= task.task %></td>
							<td><%= task.status %></td>
							<td><%= task.time %></td>
							<td><%= task.notes %></td>
							<td><%= task.description %></td>
							<td>
								<a href="/edit/<%= task.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
								<a href="/delete/<%= task.id %>" class="btn btn-sm btn-danger">Delete</a>
							</td>
						</tr>
					<% }) %>
					</tbody>
				</table>
			<% } else { %>
				<p class="text-center">No tasks found. Go <a href="/add" >here</a> to add tasks.</p>
			<% } %>
		<% } %>
	</div>
</div>
</body>
</html>
